---
import AnimatedButton from './AnimatedButton.tsx';

const contactInfo = [
  {
    icon: 'M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z',
    title: 'Adres',
    value: 'Ümraniye / İstanbul'
  },
  {
    icon: 'M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z',
    title: 'E-posta',
    value: 'elbeyi.usta@example.com'
  },
  {
    icon: 'M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.02.74-.25 1.02l-2.2 2.2z',
    title: 'Telefon',
    value: '+90 530 130 42 64'
  }
];
---

<section id="iletisim" class="py-16 md:py-20 lg:py-32 bg-brand-light scroll-mt-16 sm:scroll-mt-20 md:scroll-mt-24 animate-fade-in-up">
  <div class="container mx-auto px-4">

    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight text-brand-dark">
        Projenizi Hayata Geçirelim
      </h2>
      <p class="mt-3 md:mt-4 text-base md:text-lg text-brand-secondary/80 px-4">
        Bir sorunuz mu var veya bir proje teklifi mi almak istiyorsunuz? Aşağıdaki formu doldurun veya doğrudan benimle iletişime geçin.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-8 md:gap-12 items-start">
      <!-- Contact Info & Map -->
      <div class="space-y-6 md:space-y-8 animate-fade-in-up">
        <div class="bg-white rounded-2xl p-6 md:p-8 shadow-lg">
          <h3 class="text-xl md:text-2xl font-bold text-brand-dark mb-4 md:mb-6">İletişim Bilgileri</h3>
          <div class="space-y-4 md:space-y-6">
            {contactInfo.map(info => (
              <div class="flex items-start space-x-3 md:space-x-4">
                <div class="w-10 h-10 md:w-12 md:h-12 bg-brand-primary text-white rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 md:w-6 md:h-6" fill="currentColor" viewBox="0 0 24 24"><path d={info.icon} /></svg>
                </div>
                <div>
                  <h4 class="text-base md:text-lg font-semibold text-brand-dark">{info.title}</h4>
                  <p class="text-brand-secondary text-sm md:text-base">{info.value}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
        <div class="h-60 md:h-80 rounded-2xl overflow-hidden shadow-lg">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d192697.7992686261!2d28.9749424!3d41.0053215!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac7e0697a15c3%3A0x208977d73b345089!2s%C4%B0stanbul%2C%20T%C3%BCrkiye!5e0!3m2!1str!2str!4v1678886472000!5m2!1str!2str"
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade">
          </iframe>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="bg-white rounded-2xl p-6 md:p-8 lg:p-10 shadow-lg animate-fade-in-up animation-delay-300">
        <h3 class="text-xl md:text-2xl font-bold text-brand-dark mb-4 md:mb-6">İş/Proje Başvurusu</h3>
        <form class="space-y-4 md:space-y-5">
          <input type="text" id="fullname" name="fullname" placeholder="Adınız Soyadınız" class="w-full px-3 md:px-4 py-3 bg-brand-light rounded-lg focus:ring-2 focus:ring-brand-primary transition text-sm md:text-base" />
          <input type="tel" id="phone" name="phone" placeholder="Telefon Numaranız" class="w-full px-3 md:px-4 py-3 bg-brand-light rounded-lg focus:ring-2 focus:ring-brand-primary transition text-sm md:text-base" />
          <select id="applicationType" name="applicationType" class="w-full px-3 md:px-4 py-3 bg-brand-light rounded-lg focus:ring-2 focus:ring-brand-primary transition text-sm md:text-base">
            <option value="">Başvuru Türü Seçin</option>
            <option value="is">İş Başvurusu</option>
            <option value="proje">Proje Başvurusu</option>
          </select>
          <textarea id="message" name="message" placeholder="Kısa bir mesaj yazın..." rows="4" class="w-full px-3 md:px-4 py-3 bg-brand-light rounded-lg focus:ring-2 focus:ring-brand-primary transition resize-none text-sm md:text-base"></textarea>
          <AnimatedButton client:load type="submit" className="w-full">
            Başvuruyu Gönder
          </AnimatedButton>
        </form>
      </div>
    </div>

  </div>
</section>
